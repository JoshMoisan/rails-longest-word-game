<div class="container">
  <h1>New game</h1>

  <ol><% @letters.each do |letter|%>
    <li><%= letter.upcase %></li>
  <% end %>
  </ol>


  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

    <label for="input">Whats the longest word you can find?</label>
    <input type="text" name="input" placeholder="Type here">
    <input class= "btn btn-primary" type="submit" value="Play">
  </form>
</div>
